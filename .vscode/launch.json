                        "name": "Debug unit tests in executable 'sonicprobe'",
                        "cargo": {
                                "args": [
                                        "test",
                                        "--no-run",
                                        "--bin=sonicprobe",
                                        "--package=sonicprobe"
                                ],
                                "filter": {
                                        "name": "sonicprobe",
                                        "kind": "bin"
                                }
                        },
                        "args": ["/home/davide/Musica/test.flac" ],
                        "cwd": "${workspaceFolder}"
                }
